{
  "env": {
    "jest": true
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "project": ["./tsconfig.json", "./__tests__/tsconfig.json"],
    "sourceType": "module"
  },
  "rules": {
    "import/no-unresolved": 0,
    "no-plusplus": 0,
    "max-len": [
      "error",
      {
        "code": 100
      }
    ],
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": "warn"
  }
}